
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Designation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @databases.each do |database| %>
      <tr>
        <td><%= database.First_Name %></td>
        <td><%= database.Last_Name %></td>
        <td><%= database.Age %></td>
        <td><%= database.Gender %></td>
        <td><%= database.Designation %></td>
        <td><%= link_to 'Show', database %></td>
        <td><%= link_to 'Edit', edit_database_path(database) %></td>
        <td><%= link_to 'Destroy', database, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Database', new_database_path, class:"btn btn-dark" %>
